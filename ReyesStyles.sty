%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Class Definition
%   This is meant to be used with the article class, which is base Latex. Some
%   of the features are obtained through the inclusion of other packages, which
%   are highlighted throughout.

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{ReyesStyles}[2017/10/31 Reyes Styles]




%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Formatting Options
%   While article class takes care of most of the formatting, additional care is
%   given to ensure the margins are correct.
%  
%   Left-to-Right:
%     paperwidth=8.5in - 1.5 inches on left for review, 1 inch on right
%
%   Top-to-Bottom:
%     paperheight=11in - 1.25 inches on top and bottom for headers/margins and
%     headers appear at the 0.5 inch mark

\paperwidth=8.5in
\hoffset=0in
\oddsidemargin=0.5in
\evensidemargin=0.5in
\textwidth=6in
\marginparsep=0in
\marginparwidth=0in

\paperheight=11in
\voffset=0in
\topmargin=-0.5in
\headheight=0.25in
\headsep=0.5in
\textheight=8.5in
\footskip=0.50in



%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Define Commands
%   Some commands are redefined to have shorter versions be used in the
%   headers and footers of the document as well as some additional environments
%   that are useful to all articles.

% Short title
\renewcommand{\title}[2][]{%
	\def\@title{#2}
	\def\stitle{#1}
}

\title{}

% Short author
\renewcommand{\author}[2][]{%
	\def\@author{#2}
	\def\sauthor{#1}
}

\author{}

% Paragraph
\renewcommand{\paragraph}[2][\ \ ]{%
	\par \bigskip
	\noindent
	\textbf{#2#1}
}



%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Packages
%   These additional packages control the layout and ability to use additional
%   symbols and features.
%
%   1. amsmath,amsthm,amssymb - allow use of AMS mathematical symbols, etc.
%   2. booktabs - professional tables
%   4. fancyhdr - improve headers and footers
%   5. graphicx - allows for graphics to be imported
%   6. hyperref - allows for links in pdf
%        a. colorlinks=true - color the links
%        b. linkcolor=black - set color to black so it blends
%        c. citecolor=black - set color to black so it blends
%        d. filecolor=black - set color to black so it blends
%        e. urlcolor=black - set color to black so it blends
%   7. microtype - uses nice spacing to typeset more professionally
%   8. natbib - fancy citation
%        a. citesep={;} - separation between multiple citations
%        b. aysep={} - no puntuation between author/year
%        c. yysep={,} - commas between same author, multiple years
%        d. use JASA style of bibliography
%   9. setspace - allows double spacing
%  10. subfigure - allow subfigures
\usepackage{amsmath,amsthm,amssymb}
\usepackage{booktabs}
\usepackage{chngcntr}
\usepackage{enumerate}
\usepackage{fancyhdr}
	\pagestyle{fancy}
\usepackage{graphicx}
\usepackage{natbib}
	\setcitestyle{citesep={;},aysep={},yysep={,}}
\usepackage{subfigure}
\usepackage{sectsty}
\usepackage[explicit]{titlesec}
\usepackage{mdframed}
\usepackage{bm}




%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Header/Footer Information
\lhead{\textit{\stitle}}
\chead{}
\rhead{\sauthor}
\lfoot{}
\cfoot{\thepage}
\rfoot{}
